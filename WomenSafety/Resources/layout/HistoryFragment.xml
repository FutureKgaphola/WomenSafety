<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F5F5F5"
            >
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@mipmap/safe"
             />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HI, "
            android:textColor="#003c69"
            android:textSize="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Someone"
                    android:drawableRight="@drawable/edit_square_20px"
                    android:id="@+id/womanName"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/black"
            android:textSize="25dp"/>

        </LinearLayout>

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="some@gmail.com"
                android:id="@+id/womanEmail"
        android:drawableLeft="@drawable/mail_20px"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linked Phone numbers"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:drawableTint="#003c69"
        android:drawableRight="@drawable/call_20px"
        android:textColor="#003c69"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RecyclerPhones"/>

        </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shake history"
        android:drawableRight="@drawable/history_20px"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:drawableTint="#003c69"
        android:textColor="#003c69"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/Recycle_History"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
